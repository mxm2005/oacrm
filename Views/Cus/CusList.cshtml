@model IEnumerable<OA_CRM.Models.CUSTOMER>
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>CusList</title>
    <link href="@Url.Content("~/Content/style.css?v=1")" rel="stylesheet" type="text/css" />
</head>
<body>
    <table width="100%" border="0" cellpadding="0" cellspacing="0">
        <tr>
            <td width="17" valign="top" background="/Content/images/mail_leftbg.gif">
                <img src="/Content/images/left-top-right.gif" width="17" height="29" />
            </td>
            <td valign="top" background="/Content/images/content-bg.gif">
                <table width="100%" height="31" border="0" cellpadding="0" cellspacing="0" class="left_topbg"
                    id="table2">
                    <tr>
                        <td height="31">
                            <div class="tabTitle">
                                客户信息列表</div>
                        </td>
                    </tr>
                </table>
            </td>
            <td width="16" valign="top" background="/Content/images/mail_rightbg.gif">
                <img src="/Content/images/nav-right-bg.gif" width="16" height="29" />
            </td>
        </tr>
    </table>
    <div style="margin: 0px 8px 0px 7px;">
        <div style="border: solid 1px #849DBD">
            <table class="tb_blue">
                <tr>
                    <th>
                        编号
                    </th>
                    <th>
                        客户名称
                    </th>
                    <th>
                        公司名称
                    </th>
                    <th>
                        联系人
                    </th>
                    <th>
                        地址
                    </th>
                    <th>
                        电话
                    </th>
                    <th>
                        操作
                    </th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.CUSTOMER_ID
                        </td>
                        <td>@item.CUSTOMER_NAME
                        </td>
                        <td>@item.CORPERATION
                        </td>
                        <td>@item.LINKMAN
                        </td>
                        <td>@item.ADDRESS
                        </td>
                        <td>@item.TEL
                        </td>
                        <td>@Html.ActionLink("修改", "Edit", new { id = item.CUSTOMER_ID }) | @Html.ActionLink("详情", "Details", new { id = item.CUSTOMER_ID })
                            |
                            @Html.ActionLink("删除", "Delete", new { id = item.CUSTOMER_ID })
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
    <div>
    @Html.Raw(Com.Mxm.PagerExtensions.Pager(this.Html,"page",10,102))
    </div>
</body>
</html>
